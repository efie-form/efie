{
  "include": ["lib/*.ts", "types/*.ts"],
  "compilerOptions": {
    "target": "ES2016",
    "module": "ESNext",
    // Emit
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "rootDir": ".",
    "esModuleInterop": true,

    // type checking
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",

    // Add these new options
    "composite": true,
    "incremental": true,
    "sourceMap": true,
    "declarationDir": "./dist/types"
  }
}
