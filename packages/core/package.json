{
  "name": "@efie-form/core",
  "description": "Core utilities for Efie Form (used internally by framework packages)",
  "version": "0.2.1",
  "type": "module",
  "license": "MIT",
  "author": "Wei Kang",
  "homepage": "https://github.com/pwkang/efie#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/efie-form/efie.git",
    "directory": "packages/core"
  },
  "bugs": {
    "url": "https://github.com/pwkang/efie/issues"
  },
  "keywords": [
    "internal",
    "efie-form",
    "form",
    "form-builder",
    "framework-agnostic",
    "headless",
    "typescript"
  ],
  "files": [
    "LICENSE",
    "dist/",
    "README.md"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "devDependencies": {
    "@tiptap/core": "^2.11.5",
    "tsup": "^8.0.0",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "color-convert": "^3.1.0"
  },
  "publishConfig": {
    "access": "public"
  }
}