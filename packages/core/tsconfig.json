{
  "include": ["lib/**/*.ts", "types/**/*.ts"],
  "compilerOptions": {
    "target": "ES2016",
    "module": "CommonJS",
    // Emit
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "esModuleInterop": true,

    // type checking
    "strict": true,
    "skipLibCheck": true
  }
}
