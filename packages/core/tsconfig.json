{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "composite": false,
    "declarationMap": true,
    "allowJs": true,
    "verbatimModuleSyntax": true,
    "incremental": false,
    // transpile
    "jsx": "react-jsx",
    // src
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "baseUrl": ".",
    "rootDir": ".",
  },
  "include": [
    "./lib/**/*",
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}